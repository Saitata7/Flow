{
  "name": "@flow/mobile",
  "version": "1.1.0",
  "main": "src/index.js",
  "scripts": {
    "start": "expo start",
    "dev": "expo start",
    "android": "expo run:android",
    "android:dev": "expo run:android --variant debug",
    "android:emulator": "expo run:android --device emulator",
    "android:debug": "cd android && ./gradlew assembleDebug",
    "android:release": "cd android && ./gradlew assembleRelease",
    "android:installRelease": "adb install -r android/app/build/outputs/apk/release/app-release.apk",
    "android:bundleRelease": "cd android && ./gradlew bundleRelease",
    "android:clean": "cd android && ./gradlew clean",
    "android:build": "cd android && ./gradlew assembleDebug",
    "ios": "expo run:ios",
    "ios:dev": "expo run:ios --configuration Debug",
    "ios:release": "expo run:ios --configuration Release",
    "ios:build": "cd ios && xcodebuild -workspace Flow.xcworkspace -scheme Flow -configuration Debug -destination 'platform=iOS Simulator,name=iPhone 15' build",
    "ios:clean": "cd ios && xcodebuild clean",
    "build": "expo export",
    "build:android": "expo run:android --variant release",
    "build:ios": "expo run:ios --configuration Release",
    "clean": "rm -rf .expo dist node_modules/.cache android/app/build ios/build",
    "clean:android": "rm -rf android/app/build",
    "clean:ios": "rm -rf ios/build",
    "pod:install": "cd ios && pod install",
    "pod:update": "cd ios && pod update",
    "gradle:clean": "cd android && ./gradlew clean",
    "gradle:build": "cd android && ./gradlew assembleRelease",
    "setup:emulator": "./scripts/setup-android-emulator.sh",
    "emulator:start": "emulator -avd Flow_Emulator -no-audio -no-window -gpu swiftshader_indirect",
    "emulator:stop": "adb emu kill",
    "emulator:list": "emulator -list-avds",
    "adb:devices": "adb devices",
    "adb:shell": "adb shell",
    "adb:logcat": "adb logcat | grep -E '(ReactNative|Flow|Firebase)'",
    "firebase:test": "node -e \"console.log('Testing Firebase connection...'); require('./src/services/firebaseNativeService').default.init().then(() => console.log('✅ Firebase initialized')).catch(e => console.error('❌ Firebase error:', e))\"",
    "api:test": "node -e \"console.log('Testing API connection...'); require('./src/services/apiService').default.healthCheck().then(r => console.log('✅ API health:', r)).catch(e => console.error('❌ API error:', e))\"",
    "lint": "eslint src/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:e2e": "jest tests/e2e/",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "type-check": "echo 'Type checking not configured yet'"
  },
  "dependencies": {
    "@craftzdog/react-native-buffer": "^6.1.0",
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-clipboard/clipboard": "^1.16.2",
    "@react-native-community/datetimepicker": "^8.4.4",
    "@react-native-community/netinfo": "^11.3.1",
    "@react-native-firebase/app": "^23.3.1",
    "@react-native-firebase/auth": "^23.3.1",
    "@react-native-google-signin/google-signin": "^16.0.0",
    "@react-native-picker/picker": "^2.11.1",
