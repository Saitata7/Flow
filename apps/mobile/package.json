    "@react-navigation/native": "^7.1.9",
    "@react-navigation/native-stack": "^7.3.12",
    "@react-navigation/stack": "^7.3.2",
    "@squircle-js/react": "^1.2.18",
    "@tanstack/react-query": "^5.85.6",
    "axios": "^1.12.2",
