{
  "name": "@flow/api",
  "version": "1.0.0",
  "description": "Flow API service - Backend for Flow v1",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "server": "node src/server.js",
    "lint": "eslint src/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:config": "jest tests/config/",
    "test:security": "jest tests/security/",
    "test:e2e": "jest tests/e2e/",
    "test:all": "jest --passWithNoTests",
    "test:controllers": "jest tests/unit/controllers/",
    "test:services": "jest tests/unit/services/",
    "test:middleware": "jest tests/unit/middleware/",
    "test:routes": "jest tests/unit/routes/",
    "test:utils": "jest tests/unit/utils/",
    "test:db": "jest tests/unit/db/",
    "test:redis": "jest tests/unit/redis/",
    "test:config:manual": "node tests/config/test-all-configs.js",
    "clean": "rm -rf logs tmp node_modules/.cache",
    "openapi:generate": "node scripts/generate-openapi.js",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:reset": "node scripts/migrate.js reset",
    "test:env": "node scripts/testEnvironment.js",
    "test:env:local": "NODE_ENV=development node scripts/testEnvironment.js",
    "test:env:prod": "NODE_ENV=production node scripts/testEnvironment.js",
    "test:gcp:comprehensive": "node scripts/testGCPProductionComprehensive.js",
    "test:gcp:e2e": "node tests/e2e/gcp-production.test.js",
    "test:gcp:all": "npm run test:gcp:comprehensive && npm run test:gcp:e2e",
    "deploy:gcp": "./scripts/deployGCP.sh"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "moment": "^2.29.4",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  }
}
