{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Base Schema",
  "description": "Common properties for all Flow entities",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the entity"
    },
    "schemaVersion": {
      "type": "integer",
      "description": "Version of the schema used for this entity"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the entity was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the entity was last updated"
    },
    "deletedAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When the entity was soft-deleted (null if not deleted)"
    }
  },
  "required": ["id", "schemaVersion", "createdAt", "updatedAt"],
  "additionalProperties": false
}
