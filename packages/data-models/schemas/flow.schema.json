{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Flow",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the flow"
    },
    "title": {
      "type": "string",
      "description": "Title of the flow",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Description of the flow",
      "maxLength": 500
    },
    "trackingType": {
      "type": "string",
      "enum": ["Binary", "Quantitative", "Time-based"],
      "description": "Type of tracking for the flow"
    },
    "frequency": {
      "type": "string",
      "enum": ["Daily", "Weekly", "Monthly"],
      "description": "Frequency of the flow"
    },
    "everyDay": {
      "type": "boolean",
      "description": "Whether the flow should be tracked every day"
    },
    "daysOfWeek": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"]
      },
      "description": "Days of the week when the flow should be tracked"
    },
    "reminderTime": {
      "type": "string",
      "format": "date-time",
      "description": "Time when reminders should be sent"
    },
    "reminderLevel": {
      "type": "string",
      "enum": ["1", "2", "3"],
      "description": "Level of reminder intensity"
    },
    "cheatMode": {
      "type": "boolean",
      "description": "Whether cheat mode is enabled for this flow"
    },
    "planId": {
      "type": ["string", "null"],
      "description": "ID of the parent plan (optional - links flow to plan)"
    },
    "goal": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["number", "duration", "count"],
          "description": "Type of goal value"
        },
        "value": {
          "type": "number",
          "description": "Target value per period"
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement (e.g., 'minutes', 'steps', 'glasses')"
        }
      },
      "description": "Goal configuration for quantitative/time flows",
      "additionalProperties": false
    },
    "progressMode": {
      "type": "string",
      "enum": ["sum", "average", "latest"],
      "description": "How to calculate progress: sum (accumulate), average (over time), latest (last value wins)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 30
      },
      "description": "Tags for filtering and searching flows",
      "maxItems": 10
    },
    "archived": {
      "type": "boolean",
      "description": "Whether the flow is archived (keeps history without cluttering UI)"
    },
    "visibility": {
      "type": "string",
      "enum": ["private", "friends", "public"],
      "description": "Visibility level of the flow"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the flow was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the flow was last updated"
    },
    "deletedAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When the flow was soft-deleted (null if not deleted)"
    },
    "ownerId": {
      "type": "string",
      "description": "ID of the user who owns this flow"
    },
    "schemaVersion": {
      "type": "integer",
      "description": "Version of the schema used"
    }
  },
  "required": ["id", "title", "trackingType", "frequency", "ownerId", "schemaVersion", "createdAt", "updatedAt"],
  "additionalProperties": false
}
